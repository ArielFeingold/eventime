<%= form_for(@user) do |f| %>

    <div class="form-group">
    <%= f.label "Name" %>
    <br>
    <%= f.text_field :name, class: "form-control", :placeholder => (@user.name || 'What is your name?') %>
  </div>

  <div class="form-group">
    <%= f.label "About Me" %>
    <br>
    <%= f.text_area :about, class: "form-control", :placeholder => (@user.about || 'Tell us a little about yourself....') %>
  </div>

  <div class="actions">
    <br/>
    <%= f.submit "Update profile", class: "btn btn-primary" %>
  </div>


<% end %>
