<%= form_for(@user) do |f| %>

<div class="form-group">
  <%= f.label "Name" %>
  <br>
  <%= f.text_field :name, class: "form-control", :placeholder => (@user.name || 'What is your name?') %>
</div>

  <div class="form-group">
    <%= f.label "About Me" %>
    <br>
    <%= f.text_area :about, class: "form-control", :placeholder => (@user.errors.full_messages_for(:about).first) || @user.about%>
  </div>

  <div class="form-group">
    <%= f.label "City of Residence" %>
    <br>
    <%= f.text_field :city, class: "form-control", :placeholder => (@user.errors.full_messages_for(:city).first) || @user.city%>
  </div>

  <div class="form-group">
    <%= f.label "State of Residence" %>
    <br>
    <%= f.text_field :state, class: "form-control", :placeholder => (@user.errors.full_messages_for(:state).first) || @user.city%>
  </div>


  <div class="actions">
    <br/>
    <%= f.submit "Update profile", class: "btn btn-primary" %>
  </div>


<% end %>
