
<div class="row">
  <div class="col-sm-6 mx-auto pt-5">
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title pb-3">Event: <%=@event.title%></h5>
          <p>Created By: <%=link_to @event.user.name, user_path(@event.user)%></p>
          <p>Description: <%=@event.description%></p>
          <p>Date: <%=@event.date%></p>
          <p>Time: <%=@event.time%></p>
          <%if @event.user == current_user%>
            <%= link_to "Edit Event", edit_event_path(@event), class:"btn btn-primary" %>
          <%end%>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title pb-3">Going: </h5>
          <ul class="list-group">
            <%@event.rsvps.each do |rsvp| %>
              <li class="list-group-item"><%=link_to rsvp.user.name, user_path(rsvp.user)%></li>
            <%end%>
          </ul>
          <%if @event.rsvps.detect {|r| r.user_id == current_user.id} == nil%>
            <%= button_to "Attend Event", rsvps_path, :method => :post, params: { "event_id" => @event.id }, class: "btn btn-outline-warning btn-sm" %>
          <%else%>
            <p>you are attending this event</p>
            <%= button_to "Unattend Event", rsvp_path, :method => :delete, class: "btn btn-outline-warning btn-sm" %>
          <%end%>
      </div>
    </div>
  </div>
  <div class="col-sm-6 mx-auto pt-5">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title pb-3">Comments </h5>
          <ul class="list-group">
            <%@event.comments.each do |c| %>
              <li class="list-group-item"> <%=link_to c.user.name.titleize, user_path(c.user)%>: <%=c.content.capitalize%></li>
            <%end%>
          </ul>
          <p class="mt-4">Leave a Comment:</p>
          <%= render 'comments/comment_form' %>
      </div>
    </div>
  </div>
</div>
