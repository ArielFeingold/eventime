
<div class="row">
  <div class="col-sm-6 mx-auto pt-5">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title pb-3 text-center"><%=@event.title%></h5>
          <p><%=@event.description%></p>
          <p><%=@event.date%></p>
          <p><%=@event.time%></p>

          <h5>Attending:</h5>
          <ul>
            <%@event.rsvps.each do |rsvp| %>
              <li><%=link_to rsvp.user.name, user_path(rsvp.user)%></li>
            <%end%>
          </ul>
          <%if @event.rsvps.detect {|r| r.user_id = current_user.id} == nil%>
            <%= button_to "Attend Event", rsvps_path, :method => :post, params: { "event_id" => @event.id }, class: "btn btn-outline-warning btn-sm" %>
          <%else%>
            <p>you are attending this event</p>
            <%= button_to "Unattend Event", rsvp_path, :method => :delete, class: "btn btn-outline-warning btn-sm" %>
          <%end%>
      </div>
    </div>
  </div>
</div>
