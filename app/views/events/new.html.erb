<div class="row">
  <div class="col-sm-8 mx-auto pt-5">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title pb-3 text-center">Create an Event</h5>
          <% if @event.errors.any? %>
            <div id="error_explanation">
              <table class="table table-borderless">
                <thead>
                  <tr class="table-danger">
                    <th scope="col"><%= pluralize(@event.errors.count, "error") %> prohibited this event from being created:</th>
                  </tr>
                </thead>
                <tbody>
                  <% @event.errors.full_messages.each do |msg| %>
                    <tr class="table-warning"><td>&nbsp &nbsp <%= msg %></td></tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% end %>
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
