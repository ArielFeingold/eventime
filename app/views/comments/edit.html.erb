<div class="row">
  <div class="col-sm-6 mx-auto pt-5">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title pb-3 text-center">Edit Comment</h5>
          <%= form_for @comment do |f| %>

            <div class="form-group">
              <%= f.text_area :content, class: "form-control"%>
            </div>

            <div class="actions">
              <br/>
                <%= f.submit "Edit Comment", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
